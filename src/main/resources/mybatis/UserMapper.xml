<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.muye.mapper.UserMapper">

  <resultMap id="userResult" type="cn.muye.model.User">
    <result property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="age" column="age"/>
    <result property="sex" column="sex"/>
    <result property="date" column="date"/>
    <result property="result" column="result"/>
    <result property="saleConfirm" column="saleConfirm"/>
  </resultMap>

  <sql id="Base_Column_List" >
    id, name, age, sex, date, result, saleConfirm
  </sql>

  <select id="getUserById" resultMap="userResult">
    select
    <include refid="Base_Column_List" />
    from user u
    where u.id = #{id};
  </select>

  <select id="listUsers" resultMap="userResult">
    select
    <include refid="Base_Column_List" />
    from user u
  </select>

  <insert id="saveUser">
    insert into user(
    id,
    name,
    age,
    sex,
    date,
    result,
    saleConfirm
    ) values (
    #{id},
    #{name},
    #{age},
    #{sex},
    #{date},
    #{result},
    #{saleConfirm}
    )
  </insert>

</mapper>